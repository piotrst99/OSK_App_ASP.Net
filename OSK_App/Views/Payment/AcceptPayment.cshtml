@model OSK_App.Entities.Payment

@{
    ViewData["Title"] = "AcceptPayment";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div>
    <form asp-action="AcceptPayment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row breadcrumb">
            <div class="col-sm-6 form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="col-sm-6 form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <select asp-for="StudentID" class ="form-control" asp-items="ViewBag.StudentID"></select>
            </div>
        </div>

        <div class="row">

            <div class="col-sm-1 form-group">
                <input type="submit" value="Dodaj" class="btn btn-success" />
            </div>

            <div class="col-sm-2 form-group">
                <a asp-action="GetCourses" class="btn btn-danger">Wróć do listy</a>
            </div>

        </div>

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
