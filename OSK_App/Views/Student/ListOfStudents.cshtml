@model IEnumerable<OSK_App.Entities.Student>

@{
    ViewData["Title"] = "Kursanci";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="AddStudent">Dodaj kursanta</a>
</p>

<div id="tabelaKursanci">

    <table class="table /*table-hover*/" id="tabelka">
        <tr>
            <th>Pierwsze imię</th>
            <th>Drugie imię</th>
            <th>Nazwisko</th>
            <th>Pesel</th>
            <th>Nazwa użytkownika</th>
            <th>Akcje</th>
        </tr>
        @foreach (var item in Model) {
            <tr class="dane">
                <td>@item.User.FirstName</td>
                <td>@item.User.SecondName</td>
                <td>@item.User.Surname</td>
                <td>@item.User.PESEL</td>
                <td>@item.User.UserName</td>
                <td>
                    @Html.ActionLink("Szczegóły", "GetDetailsStudent", new { id = item.UserID })
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.UserID })
                    @Html.ActionLink("Usuń", "RemoveStudent", new { id = item.UserID })
                </td>
            </tr>
        }
    </table>

</div>

<style>
    tr.dane:hover {
        background-color: #4cff00;
    }
</style>


